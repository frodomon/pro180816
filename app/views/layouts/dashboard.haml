            %ul
              %li
                %a{href: "#{contracts_path}", title: "Contratos"}
                  %i.fa.fa-lg.fa-fw.fa-list-alt
                  %span.menu-item-parent Contratos
              %li
                %a{href: "#{remission_guides_path}", title: "Guias de Remisión"}
