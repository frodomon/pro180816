    %a#dialog{'data-toggle' => 'modal', 'href' => "#", 'data-target' => "#modalLoading"}

    #modalLoadingLabelading.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "modalLoadingLabel", role: "dialog", tabindex: "-1", "data-keyboard"=>false, "data-backdrop"=>"static"}
      .modal-dialog
        .modal-content
          .modal-body
            .row
              .col-sm-12
                %h3 Cargando Contenido...
                .progress.progress-sm.progress-striped.active
                  .progress-bar.bg-color-darken{role: "progressbar", style: "width: 100%"}
